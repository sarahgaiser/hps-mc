{% set num = (job_id - 1)/2000 %}
{% set dir_num = num | int %}
{
    "run_number": {{ run_number }},
    "bunches": {{ bunches }},
    "nevents": {{ nevents }},
    "seed": {{ 42 + job_id }},
    "run_params": "{{ run_params }}",
    "target_thickness": {{ target_thickness }},
    "beam_energy": {{ beam_energy }},
    "num_electrons": {{ num_electrons }},
    "target_x": {{ target_x }},
    "target_y": {{ target_y }},
    "target_z": {{ target_z }},
    "beam_sigma_x": {{ beam_sigma_x }},
    "beam_sigma_y": {{ beam_sigma_y }},
    "beam_rot_x": {{ beam_rot_x }},
    "beam_rot_y": {{ beam_rot_y }},
    "beam_rot_z": {{ beam_rot_z }},
    "detector": "{{ detector }}",
    "input_files": {
	    "/sdf/data/hps/physics2021/mc/gen/tritrig/lhe/{{ dir_num + 1 }}/tritrig_{{ run_params }}_unweighted_events_{{ job_id }}.lhe.gz": "tritrig_unweighted_events.lhe.gz"
    },
    "output_files": {
	    "tritrig_mom_rot.slcio": "pass5_v8_new_coords/{{ detector }}/slic/{{ dir_num + 1 }}/tritrig_{{ run_params }}_mom_rot_{{ job_id }}.slcio"
